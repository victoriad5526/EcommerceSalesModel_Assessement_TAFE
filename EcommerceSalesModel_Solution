DROP DATABASE IF EXISTS Shop;
CREATE DATABASE Shop;
USE Shop;

CREATE TABLE Members (
MemberId TINYINT UNSIGNED NOT NULL AUTO_INCREMENT,
MemberFirstName VARCHAR(20) NOT NULL,
MemberLastName VARCHAR(20) NOT NULL,
MemEmail VARCHAR(20) NOT NULL,
MemStartDate time,
PRIMARY KEY (MemberId)
)ENGINE=InnoDB DEFAULT CHARSET=utf8;

CREATE TABLE Orders (
OrderId SMALLINT UNSIGNED NOT NULL AUTO_INCREMENT,
OrderName VARCHAR(45) NOT NULL, 
Inventory SMALLINT UNSIGNED NOT NULL,
MemberId TINYINT UNSIGNED NOT NULL,
DateEntered DATETIME NOT NULL,
DateUpdated TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
PRIMARY KEY (OrderId),
CONSTRAINT fkOrdersMembers FOREIGN KEY (MemberId) REFERENCES Members (MemberId) ON DELETE RESTRICT ON UPDATE CASCADE
)ENGINE=InnoDB DEFAULT CHARSET=utf8;
